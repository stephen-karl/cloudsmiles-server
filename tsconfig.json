{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "app",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@configs/*": ["app/configs/*"],
      "@constants/*": ["app/constants/*"],
      "@controllers/*": ["app/controllers/*"],
      "@databases/*": ["app/databases/*"],
      "@schemas/*": ["app/schemas/*"],
      "@helpers/*": ["app/helpers/*"],
      "@routes/*": ["app/routes/*"],
      "@interfaces/*": ["app/interfaces/*"]
    }
  },
  "include": ["app/**/*.ts", "app/templates/email.template.tsx", "app/helpers/resend/transporters.tsx", "app/controllers/staff.controller.tsx"],  // Include only .ts files if you donâ€™t need to include other files like .js or .json
  "exclude": ["node_modules", "dist"]  // Exclude compiled output and unnecessary files
}
